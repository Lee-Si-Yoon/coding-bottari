{
  "name": "host",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "rimraf .next && NEXT_PRIVATE_LOCAL_WEBPACK=true next dev",
    "build": "NEXT_PRIVATE_LOCAL_WEBPACK=true next build",
    "start": "nx exec -- next start",
    "lint": "nx exec -- next lint",
    "doctoc": "nx exec -- doctoc . --github --notitle",
    "clean": "nx exec -- rimraf .next"
  },
  "dependencies": {
    "@module-federation/nextjs-mf": "^8",
    "next": "^14",
    "react": "^18",
    "react-dom": "^18",
    "ui": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "^14",
    "postcss": "^8",
    "tailwindcss": "^3",
    "typescript": "^5",
    "webpack": "^5",
    "webpack-cli": "^5",
    "webpack-dev-server": "^5"
  },
  "nx": {
    "includedScripts": [
      "dev",
      "build",
      "start",
      "doctoc",
      "clean"
    ],
    "targets": {
      "dev": {
        "cache": false
      },
      "start": {
        "cache": false
      },
      "build": {
        "cache": true,
        "inputs": [
          "production",
          "^production"
        ],
        "outputs": [
          "{workspaceRoot}/.next"
        ],
        "dependsOn": [
          "^build"
        ],
        "options": {
          "cwd": "apps/host"
        }
      }
    }
  }
}
