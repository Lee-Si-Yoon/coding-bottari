{
  "name": "playground",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "nx exec -- tsc && vite build",
    "clean": "nx exec -- rimraf dist",
    "dev": "nx exec -- vite",
    "doctoc": "nx exec -- doctoc . --github --notitle",
    "lint": "nx lint --config ./.eslintrc.cjs",
    "preview": "nx exec -- vite preview"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ui": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "nx": {
    "includedScripts": [
      "dev",
      "clean",
      "build",
      "preview",
      "doctoc"
    ],
    "targets": {
      "dev": {
        "cache": false
      },
      "preview": {
        "cache": false
      },
      "build": {
        "cache": true,
        "inputs": [
          "production",
          "^production"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ],
        "dependsOn": [
          "^build"
        ],
        "options": {
          "cwd": "apps/playground"
        }
      }
    }
  }
}
