{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",

    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": true,

    "noEmitOnError": true
  },
  "exclude": ["node_modules", "dist"]
}
