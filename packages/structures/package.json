{
  "name": "@bottari/structures",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index",
  "types": "dist/index",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run compile",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "lint": "nx lint --config ./.eslintrc.cjs"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "nx": {
    "includedScripts": [
      "clean",
      "build"
    ],
    "targets": {
      "build": {
        "cache": true,
        "inputs": [
          "production",
          "^production"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ],
        "dependsOn": [
          "^build"
        ],
        "options": {
          "cwd": "packages/structures"
        }
      }
    }
  }
}
