{
  "name": "ui",
  "version": "1.0.0",
  "scripts": {
    "build": "nx exec -- pnpm run clean && pnpm run compile",
    "clean": "rimraf ./dist",
    "compile": "tsc -p tsconfig.build.json",
    "doctoc": "nx exec -- doctoc . --github --notitle",
    "lint": "nx lint --config ./.eslintrc.cjs"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "~18"
  },
  "nx": {
    "includedScripts": [
      "clean",
      "build",
      "doctoc"
    ],
    "targets": {
      "build": {
        "cache": true,
        "inputs": [
          "production",
          "^production"
        ],
        "outputs": [
          "{workspaceRoot}/dist"
        ],
        "dependsOn": [
          "^build"
        ],
        "options": {
          "cwd": "packages/ui"
        }
      }
    }
  }
}
